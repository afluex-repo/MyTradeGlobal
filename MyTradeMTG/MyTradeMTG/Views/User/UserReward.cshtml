@model MyTrade.Models.AssociateBooking

@{
    ViewBag.Title = "UserReward";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@using (Html.BeginForm("UserReward", "User", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>User Reward</h4>
                                <span class="text-danger">
                                    @TempData["Rewardmsg"]

                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>S No.</th>
                                        <th>Reward</th>
                                        <th>Target</th>
                                        <th>Status</th>
                                        <th>Achieve Date</th>
                                        @*<th>Action</th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstPlot != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstPlot)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>
                                                        <img src="@Item.RewardImage" height="100" width="100" />
                                                        <br />@Item.RewardName
                                                    </td>
                                                    <td>@Item.Target</td>
                                                    <td><label class="@Item.Contact">@Item.Status</label></td>
                                                    <td>@Item.QualifyDate</td>
                                                    @*<td>
                                                        @if (Item.Status == "Achieved")
                                                        {
                                                            <a class="btn btn-info btn-sm" href="/User/ClaimReward/@Item.PK_RewardItemId" onclick="return confirm('Are you sure you wish to claim this Award?');">Claim</a>
                                                            <a class="btn btn-warning btn-sm" href="/User/SkipReward/@Item.PK_RewardItemId" onclick="return confirm('Are you sure you wish to Skip this Award?');">Skip</a>
                                                        }
                                                    </td>*@
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }

                                </tbody>



                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
