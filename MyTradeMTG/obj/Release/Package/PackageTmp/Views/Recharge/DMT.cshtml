        delBen(sid, bid);
        $("#" + bid + "otpb").attr({ 'disabled': false, 'placeholder': 'Enter OTP' });
        var count = 30;
        var btnRend = setInterval(function () {
            --count;
            if (count == -1) {
                $("#" + bid + "Resend").attr('disabled', false);
                $("#" + bid + "Resend").text('Resend');
                clearInterval(btnRend);

            } else {
