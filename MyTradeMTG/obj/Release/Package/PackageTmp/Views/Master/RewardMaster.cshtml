@model MyTrade.Models.Master

@{
    ViewBag.Title = "RewardMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/plugins/flatpickr/flatpickr.css" rel="stylesheet" type="text/css">
<link href="~/plugins/flatpickr/custom-flatpickr.css" rel="stylesheet" type="text/css">
@using (Html.BeginForm("RewardMaster", "Master", FormMethod.Post, new { @id = "form", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Reward Master
                                    <a href="/Master/RewardMasterList" class="btn btn-primary float-right">Back to List</a>
                                </h4>
                                
                                <span class="text-danger">
                                    @TempData["Reward"]
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <div class="col-lg-4 col-md-3">
                                <div class="form-group">
                                    <label>Reward Name<span style="color:red">*</span></label>
                                    @Html.TextBoxFor(m=> m.RewardName, new { @class = "form-control", @Placeholder = "Reward Name" })
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-3">
                                <div class="form-group">
                                    <label> From Date</label>
                                    @Html.TextBoxFor(m=> m.FromDate, new { @class = "form-control", @Placeholder = "dd/mm/yyyy" })
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-3">
                                <div class="form-group">
                                    <label>To Date</label>
                                    @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "dd/mm/yyyy" })
                                </div>
                            </div>

                            <div class="col-lg-4 col-md-3">
                                <div class="form-group">
                                    @if (Model.PK_RewardId != null)
                                    {
                                        @Html.HiddenFor(m=>m.PK_RewardId)
                                        <input type="submit" class="btn btn-success" id="Update" name="Update" value="Upadate" onclick="return Validationform();" />
                                    }
                                    else
                                    {
                                        <input type="submit" class="btn btn-success" id="save" name="save" value="Save" onclick="return Validationform();" />
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js" type="text/javascript"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js" type="text/javascript"></script>
<link href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="Stylesheet" type="text/css" />
<script src="~/MyTradeWebsite/assets/js/jquery.min.js"></script>
<script>
    jQuery.noConflict();
    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear:true

    });
    jQuery.noConflict();
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true

    });

</script>
<script>
    function Validationform(){
        debugger;

        $("#divload").css({ 'display': 'none' });
        $(".errortext").removeClass('errortext');

        if ($("#RewardName").val() == '') {
            $("#RewardName").addClass('errortext');
            $("#RewardName").focus();
            return false;
        }
    }
</script>
<style>
    .errortext{
        border:2px solid red;
        background:#f3bcbc!important;
    }
</style>







