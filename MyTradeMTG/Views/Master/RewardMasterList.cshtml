@model MyTradeMTG.Models.Master

@{
    ViewBag.Title = "RewardMasterList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("RewardMasterList", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="container">
        <div class="row layout-top-spacing">
            <div class="col-lg-12 col-12 layout-spacing">
                <div class="statbox widget box box-shadow">
                    <div class="widget-header">
                        <div class="row">
                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                <h4>Reward Master List
                                    <a href="/Master/RewardMaster" class="btn btn-primary float-right">Back to RewardMaster</a>
                                </h4>
                               
                                <span class="text-danger">
                                    @TempData["Msg"]
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="widget-content widget-content-area">
                        <div class="row">
                            <table id="html5-extension" class="table table-hover non-hover" ,data-page-length='25'>
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Reward Name</th>
                                        <th>From Date</th>
                                        <th>To Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstBonazaReward != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstBonazaReward)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.RewardName</td>
                                                    <td>@Item.FromDate</td>
                                                    <td>@Item.ToDate</td>
                                                    <td><a class="btn btn-info btn-sm" href="/Master/RewardMaster?RewardId=@Item.PK_RewardId">Edit</a>
                                                        <a class="btn btn-danger btn-sm" href="/Master/DeleteReward?RewardId=@Item.PK_RewardId">Delete</a></td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}








